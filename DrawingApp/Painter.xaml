<Page
    x:Class="DrawingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="_canvas" Margin="10,135,11,11" Background="#FFFFFFA0">
            <TextBlock x:Name="_selectTextLabel" Canvas.Left="1125" Canvas.Top="828" Text="Selected : " TextWrapping="Wrap" SelectionChanged="TextBlock_SelectionChanged"/>
            <TextBlock x:Name="_shapePositionTextLabel" Canvas.Left="1205" Canvas.Top="828" Text="" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
            <InkToolbar Canvas.Top="-130" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Canvas>
        <Grid x:Name="_grid" HorizontalAlignment="Center" Height="70" VerticalAlignment="Top" Width="1479" Margin="0,60,0,0">
            <Button x:Name="_rectangle" Content="Rectangle" HorizontalAlignment="Left" Height="44" VerticalAlignment="Center" Width="200" Margin="50,0,0,0"/>
            <Button x:Name="_line" Content="Line" HorizontalAlignment="Left" Height="44" Margin="455,0,0,0" VerticalAlignment="Center" Width="200"/>
            <Button x:Name="_hexagon" Content="Hexagon" HorizontalAlignment="Left" Margin="855,0,0,0" VerticalAlignment="Center" Height="44" Width="200"/>
            <Button x:Name="_clear" Content="Clear" HorizontalAlignment="Left" Height="44" Margin="1255,0,0,0" VerticalAlignment="Center" Width="200"/>
        </Grid>
    </Grid>
</Page>
